<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="@color/text_color_1"
    android:orientation="vertical"
    android:padding="20px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间："
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_orderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号："
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_shareRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分润比例："
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注："
                android:textColor="@color/text_color_3"
                android:textSize="40px" />


        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transactionMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易金额："
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_obtainMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取金额："
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <include
        android:id="@+id/icd_lowerUser"
        layout="@layout/app_item_rv_switch_or_item" />

    <include
        android:id="@+id/icd_obtainUser"
        layout="@layout/app_item_rv_switch_or_item" />
</com.zhy.autolayout.AutoLinearLayout>