    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:background="@color/item_background"
            android:padding="30px">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_integral_spec" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="须知"
                android:textColor="@color/text_color_4"
                android:textSize="50px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/item_background"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="30px">

            <TextView
                android:id="@+id/tv_remind1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:text="1.营业执照(原件或复印件加盖公章)"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_remind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:text="2.税务登记证(原件或复印件加盖公章)"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_remind3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:text="3.组织机构代码证(原件或复印件加盖公章)"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_remind4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:text="4.法人身份证(原件或复印件加盖公章)"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_remind5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10px"
                android:text="5.可授权第三方收款(授权书盖章扫描件)"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_background"
        android:paddingBottom="30px"
        android:paddingLeft="30px"
        android:paddingRight="30px">

        <include
            android:id="@+id/icd_commit"
            layout="@layout/app_include_button" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>