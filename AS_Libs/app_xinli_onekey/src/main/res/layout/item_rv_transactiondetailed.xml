<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="@color/text_color_1"
    android:orientation="horizontal"
    android:padding="20px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_orderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_orderDescribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单描述："
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textColor="@color/text_color_3"
            android:textSize="40px" />


        <TextView
            android:id="@+id/tv_rate_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="费率/通道"
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="平台"
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_orderType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单类型"
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注"
            android:textColor="@color/text_color_3"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_totalMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总金额："
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_realMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际金额："
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_extraMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="额外费用："
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态："
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>