<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

    <include
        android:id="@+id/icd_title"
        layout="@layout/app_include_title" />

    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color_1"
            android:orientation="vertical"
            android:padding="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转账金额"
                android:textColor="@color/text_color_4"
                android:textSize="40px" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="40px"
                android:paddingTop="40px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/text_color_4"
                    android:textSize="60px" />

                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_color_1"
                    android:hint="请输入转出金额"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text_color_4"
                    android:textColorHint="@color/text_color_2"
                    android:textSize="50px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_shareBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="返佣账户余额:0元"
                    android:textColor="@color/text_color_3"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/tv_allRollOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="全部转出"
                    android:textColor="#0aa502"
                    android:textSize="35px" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <EditText
            android:id="@+id/et_payPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="@color/text_color_1"
            android:hint="请输入交易密码"
            android:paddingTop="40px"
            android:paddingBottom="40px"
            android:paddingLeft="20px"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:paddingRight="20px"
            android:textColor="@color/text_color_4"
            android:textColorHint="@color/text_color_2"
            android:textSize="40px" />
        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:background="@color/text_color_1"
            android:hint="请输入转出说明"
            android:paddingTop="40px"
            android:paddingBottom="40px"
            android:paddingLeft="20px"
            android:maxLength="11"
            android:paddingRight="20px"
            android:textColor="@color/text_color_4"
            android:textColorHint="@color/text_color_2"
            android:textSize="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:padding="30px"
            android:text="当天24小时到账"
            android:textStyle="bold"
            android:textColor="@color/text_color_3"
            android:textSize="35px" />

        <include
            android:id="@+id/icd_rollOut"
            layout="@layout/app_include_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:text="须知："
            android:textColor="@color/text_color_4"
            android:textSize="45px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="●返佣可直接转出到余额账户，余额账户方可提现到结算卡"
            android:textColor="@color/text_color_3"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>