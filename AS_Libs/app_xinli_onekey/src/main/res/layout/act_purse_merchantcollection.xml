<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/icd_title"
            layout="@layout/app_include_title" />


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_shareBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/item_background"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primaryColorOff"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="30px">

                <TextView
                    android:id="@+id/tv_merchantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:gravity="center"
                    android:hint="未获取到商家名称"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="@color/text_color_0"
                    android:textSize="60px"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="15px"
                    android:layout_marginLeft="50px"
                    android:layout_marginRight="50px"
                    android:layout_marginTop="20px"
                    android:background="@color/primaryColorOn" />

                <TextView
                    android:id="@+id/tv_merchantAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30px"
                    android:gravity="center"
                    android:hint="未获取到商家地址"
                    android:textColor="@color/text_color_1"
                    android:textColorHint="@color/text_color_0"
                    android:textSize="45px" />


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:background="@drawable/app_dialog_white_corner"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="30px">

                    <TextView
                        android:id="@+id/tv_titleShare"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="30px"
                        android:text=""
                        android:textColor="@color/text_color_4"
                        android:textSize="50px" />

                    <com.zhy.autolayout.AutoRelativeLayout
                        android:layout_width="800px"
                        android:layout_height="0dp"
                        android:layout_weight="5">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/sdv_qrcode"
                            android:layout_width="700px"
                            android:layout_height="700px"
                            fresco:layout_auto_basewidth="height"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            fresco:actualImageScaleType="fitCenter"
                            fresco:fadeDuration="0"
                            fresco:failureImageScaleType="fitCenter"
                            fresco:placeholderImageScaleType="fitCenter"
                            fresco:progressBarAutoRotateInterval="5000"
                            fresco:progressBarImage="@mipmap/sdv_load"
                            fresco:progressBarImageScaleType="fitCenter"
                            fresco:roundAsCircle="false"
                            fresco:roundedCornerRadius="0dp" />

                        <ImageView
                            android:layout_width="120px"
                            fresco:layout_auto_basewidth="height"
                            android:layout_height="120px"
                            android:layout_centerInParent="true"
                            android:background="@drawable/app_dialog_white_corner"
                            android:padding="10px"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/app_logo" />
                    </com.zhy.autolayout.AutoRelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="温馨提示"
                        android:textColor="@color/text_color_4"
                        android:textSize="45px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="如您不认识该商家或者不是您的好友，请谨慎操作。"
                        android:textColor="@color/text_color_4"
                        android:textSize="35px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:background="@color/text_color_1"
                android:gravity="center"
                android:orientation="vertical">


                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="20px">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_collection_wx" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="支持微信"
                            android:textColor="@color/text_color_4"
                            android:textSize="45px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_collection_zfb" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="支持支付宝"
                            android:textColor="@color/text_color_4"
                            android:textSize="45px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_collection_qq" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="支持QQ"
                            android:textColor="@color/text_color_4"
                            android:textSize="45px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="120px"
                            android:layout_height="120px"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_collection_jd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5px"
                            android:text="支持京东"
                            android:textColor="@color/text_color_4"
                            android:textSize="45px" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50px"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/app_bg_corner_button4"
                        android:gravity="center"
                        android:paddingBottom="30px"
                        android:paddingLeft="100px"
                        android:paddingRight="100px"
                        android:paddingTop="30px">

                        <ImageView
                            android:layout_width="55px"
                            android:layout_height="55px"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_share_phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:text="存至手机"
                            android:textColor="@color/text_color_1"
                            android:textSize="55px" />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50px"
                        android:background="@drawable/app_bg_corner_button2"
                        android:gravity="center"
                        android:paddingBottom="30px"
                        android:paddingLeft="100px"
                        android:paddingRight="100px"
                        android:paddingTop="30px">

                        <ImageView
                            android:layout_width="55px"
                            android:layout_height="55px"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/icon_share_share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10px"
                            android:text="一键分享"
                            android:textColor="@color/text_color_1"
                            android:textSize="55px" />
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>