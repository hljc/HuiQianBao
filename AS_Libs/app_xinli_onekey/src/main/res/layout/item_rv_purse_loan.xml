<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:background="@drawable/app_dialog_white_corner"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="35px"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:paddingTop="35px">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="10px"
            android:text="最快3分钟放款到账"
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="10px"
            android:text="最高3000元"
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_2" />

        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:padding="10px"
            android:text="有信用卡利率省20%"
            android:textColor="@color/text_color_4"
            android:textSize="40px" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>