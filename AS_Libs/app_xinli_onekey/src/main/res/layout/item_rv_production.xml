<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1px"
    android:background="@color/text_color_1"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rl_bgLeft"
        android:background="@color/item_background"
        android:orientation="vertical"
        android:padding="20px">

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55555555"
            android:textColor="@color/text_color_1"
            android:textSize="50px" />

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_discount"
            android:layout_marginTop="10px"
            android:text="返佣比例："
            android:textColor="@color/text_color_1"
            android:textSize="50px" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_rate"
            android:text="100"
            android:textColor="@color/text_color_1"
            android:textSize="60px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/rl_bgLeft"
        android:layout_width="250px"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rl_bg"
        android:layout_alignTop="@+id/rl_bg"
        android:layout_centerVertical="true"
        android:background="#FFF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_upgradeIco"
            android:layout_width="80px"
            android:layout_height="80px"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_upgradeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_upgradeIco"
            android:text="钻级会员"
            android:textColor="@color/text_color_4"
            android:textSize="40px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_upgradeLevel"
            android:layout_width="140px"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_upgradeTitle"
            android:scaleType="fitCenter" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>