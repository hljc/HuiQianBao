<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background">

    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:background="@color/item_background"
                android:layout_marginBottom="1px"
                android:layout_height="wrap_content"
                android:padding="30px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_baseDataLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_baseDataNameLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日收益"
                        android:textColor="@color/text_color_3"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_baseDataValueLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/text_color_3"
                        android:textSize="50px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_baseDataRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_baseDataNameRight"
                        android:layout_width="wrap_content"
                        android:text="累计收益"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_3"
                        android:textSize="40px" />

                    <TextView
                        android:id="@+id/tv_baseDataValueRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/text_color_3"
                        android:textSize="50px" />
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoRelativeLayout>


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_background"
                android:orientation="horizontal"
                android:padding="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转账金额"
                    android:textColor="@color/text_color_3"
                    android:textSize="40px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/text_color_3"
                    android:textSize="80px" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:background="@color/text_color_2" />

                <EditText
                    android:id="@+id/et_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/item_background"
                    android:hint="请输入提现金额"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:textColor="@color/text_color_3"
                    android:textColorHint="@color/text_color_2"
                    android:textSize="50px" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@color/item_background"
                android:orientation="horizontal"
                android:padding="30px">

                <TextView
                    android:id="@+id/tv_rakeBackMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返佣金额 0.00元"
                    android:textColor="@color/text_color_3"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/tv_withdrawalsAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="100px"
                    android:text="全部提现"
                    android:textColor="@color/primaryColorOff"
                    android:textSize="40px" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <EditText
            android:id="@+id/et_payPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px"
            android:background="@color/item_background"
            android:hint="请输入交易密码"
            android:inputType="numberPassword"
            android:lines="1"
            android:maxLength="6"
            android:padding="30px"
            android:textColor="@color/text_color_3"
            android:textColorHint="@color/text_color_2"
            android:textSize="40px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="当天24点前到账"
            android:textColor="@color/text_color_3"
            android:textSize="40px" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30px">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10px">

                <include
                    android:id="@+id/icd_withdrawals"
                    layout="@layout/app_include_button" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10px">

                <include
                    android:id="@+id/icd_detailed"
                    layout="@layout/app_include_button" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/item_background"
            android:padding="30px">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:scaleType="fitCenter"
                android:src="@mipmap/icon_integral_spec" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="须知"
                android:textColor="@color/text_color_4"
                android:textSize="50px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/item_background"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text="分润提现后转出至余额账户，余额账户方可提现至结算卡"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</ScrollView>