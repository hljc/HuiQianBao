<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

    <include
        android:id="@+id/icd_title"
        layout="@layout/app_include_title" />

    <com.ceq.app_core.view.View_XRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/xrl"
        android:layout_marginTop="1px"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_background"
                android:paddingTop="30px"
                android:paddingBottom="30px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/iv_user"
                    android:layout_marginTop="20px"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/icd_mobile"
                        layout="@layout/app_include_input" />

                    <TextView
                        android:id="@+id/tv_remind"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:textColor="@color/text_color_3"
                        android:textSize="45px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <ImageView
                    android:id="@+id/iv_contacts"
                    android:layout_width="90px"
                    android:layout_height="90px"
                    android:layout_marginRight="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_purse_recharge_user" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1px"
                android:background="@color/item_background"
                android:orientation="vertical"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1px"
                    android:background="@color/item_background"
                    android:paddingTop="30px"
                    android:paddingBottom="30px">

                    <ImageView
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/icon_integral_spec" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="充话费"
                        android:textColor="@color/text_color_4"
                        android:textSize="50px" />
                </com.zhy.autolayout.AutoLinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1px"
                android:background="@color/item_background"
                android:padding="30px">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_integral_spec" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="充值说明"
                    android:textColor="@color/text_color_4"
                    android:textSize="50px" />
            </com.zhy.autolayout.AutoLinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_background"
                android:paddingTop="10px"
                android:paddingRight="30px"
                android:paddingLeft="30px"
                android:paddingBottom="30px"
                android:id="@+id/tv_spec"
                android:textColor="@color/text_color_3"
                android:textSize="43px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.ceq.app_core.view.View_XRefreshLayout>
</com.zhy.autolayout.AutoLinearLayout>