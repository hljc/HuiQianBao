<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background">

    <com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180px">

            <ImageView
                android:id="@+id/iv_bg_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_integral_top" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="30px"
                    android:visibility="gone">

                    <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/sdv_img"
                        android:layout_width="180px"
                        android:layout_height="180px"
                        android:layout_marginRight="10px"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        fresco:actualImageScaleType="fitCenter"
                        fresco:fadeDuration="0"
                        fresco:failureImage="@mipmap/app_load_error"
                        fresco:failureImageScaleType="fitCenter"
                        fresco:placeholderImage="@mipmap/app_default_head"
                        fresco:placeholderImageScaleType="fitCenter"
                        fresco:roundAsCircle="true"
                        fresco:roundedCornerRadius="0dp" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="老司机带带我"
                            android:textColor="@color/text_color_1"
                            android:textSize="50px"
                            android:visibility="gone" />

                        <com.zhy.autolayout.AutoLinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#50ffffff"
                                android:gravity="center"
                                android:paddingBottom="10px"
                                android:paddingLeft="20px"
                                android:paddingRight="20px"
                                android:paddingTop="10px">

                                <ImageView
                                    android:layout_width="30px"
                                    android:layout_height="30px"
                                    android:scaleType="fitCenter"
                                    android:src="@mipmap/icon_mypurse_certification" />

                                <TextView
                                    android:id="@+id/tv_identify"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="未认证"
                                    android:textColor="@color/text_color_1"
                                    android:textSize="30px" />
                            </com.zhy.autolayout.AutoLinearLayout>

                            <com.zhy.autolayout.AutoLinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20px"
                                android:background="#50ffffff"
                                android:gravity="center"
                                android:paddingBottom="10px"
                                android:paddingLeft="20px"
                                android:paddingRight="20px"
                                android:paddingTop="10px"
                                android:visibility="gone">

                                <ImageView
                                    android:layout_width="30px"
                                    android:layout_height="30px"
                                    android:scaleType="fitCenter"
                                    android:src="@mipmap/icon_mypurse_phone" />

                                <TextView
                                    android:id="@+id/tv_mobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1888888888"
                                    android:textColor="@color/text_color_1"
                                    android:textSize="30px" />
                            </com.zhy.autolayout.AutoLinearLayout>
                        </com.zhy.autolayout.AutoLinearLayout>
                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="#50ffffff"
                    android:orientation="horizontal">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_ranking"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_ranking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_color_1"
                            android:textSize="50px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="当前排名"
                            android:textColor="@color/text_color_1"
                            android:textSize="50px" />

                    </com.zhy.autolayout.AutoLinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40px"
                        android:layout_marginTop="40px"
                        android:background="@color/text_color_1" />

                    <com.zhy.autolayout.AutoLinearLayout
                        android:id="@+id/ll_integral"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_color_1"
                            android:textSize="50px" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10px"
                            android:text="当前积分"
                            android:textColor="@color/text_color_1"
                            android:textSize="50px" />

                    </com.zhy.autolayout.AutoLinearLayout>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_integral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/item_background"
            android:nestedScrollingEnabled="false" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="vertical">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_background"
                android:padding="30px">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_integral_spec" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10px"
                    android:text="积分说明"
                    android:textColor="@color/text_color_4"
                    android:textSize="50px" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/item_background"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text="【收款支付获积分】让每一笔交易都为您带来惊喜！"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_remind0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text=""
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text="【积分可兑换商品】所获积分可兑换您心仪的商品！"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:text="【积分兑换原始股】积分兑换公司原始股无限增值！"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20px"
                android:textColor="@color/text_color_3"
                android:textSize="40px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</ScrollView>