<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/title_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10px">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_titleLeft"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.ceq.app_core.view.View_ImageView
            android:id="@+id/iv_titleLeft"
            android:layout_width="90px"
            android:layout_height="90px"
            android:paddingBottom="18px"
            android:paddingTop="18px"
            android:scaleType="fitCenter"
            android:src="@mipmap/app_arrow_left"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_titleLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingLeft="5px"
            android:text="左边的"
            android:textColor="@color/title_fontColor"
            android:textSize="40px"
            android:textStyle="bold"
            android:visibility="gone" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="12px"
        android:paddingRight="12px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="大标题"
                android:textColor="@color/title_fontColor"
                android:textSize="60px"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_subTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:text="小标题"
                android:textColor="@color/title_fontColor"
                android:textSize="35px"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoLinearLayout>

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_btn_press5_off"
            android:gravity="center"
            android:lines="1"
            android:padding="8px"
            android:text="标题"
            android:textColor="@color/text_color_3"
            android:textColorHint="@color/text_color_2"
            android:textSize="40px"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_weight="2"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <com.ceq.app_core.view.View_ImageView
            android:id="@+id/iv_titleRight"
            android:layout_width="90px"
            android:layout_height="90px"
            android:paddingBottom="18px"
            android:paddingTop="18px"
            android:scaleType="fitCenter"
            android:src="@mipmap/app_arrow_left"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_titleRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:paddingRight="10px"
            android:text="右边的"
            android:textColor="@color/title_fontColor"
            android:textSize="40px"
            android:textStyle="bold"
            android:visibility="gone" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>