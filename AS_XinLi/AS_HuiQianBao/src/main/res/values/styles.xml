<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="NoAnimationTheme" parent="AppBaseTheme">
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:fragmentCloseEnterAnimation">@null</item>
        <item name="android:fragmentCloseExitAnimation">@null</item>
        <item name="android:fragmentFadeEnterAnimation">@null</item>
        <item name="android:fragmentFadeExitAnimation">@null</item>
        <item name="android:fragmentOpenEnterAnimation">@null</item>
        <item name="android:fragmentOpenExitAnimation">@null</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT dpecific to a particular API-level can go here. -->
    </style>

    <style name="btn_corner_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/app_btn_corner_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="et_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#aaa</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14dp</item>
    </style>


    <style name="tv_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#888888</item>
        <item name="android:gravity">bottom</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="et_text" parent="tv_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="bt_blue">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">25sp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="iv_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@mipmap/arrow_left</item>
    </style>
</resources>

